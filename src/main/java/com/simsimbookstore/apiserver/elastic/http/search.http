### 인덱스 삭제
DELETE localhost:9200/books

### 인덱스 생성 확인
PUT localhost:9200/books
Content-Type: application/json
Authorization: Basic ZWxhc3RpYzpuaG5hY2FkZW15MTIzIQ

{
  "settings": {
    "analysis": {
      "tokenizer": {
        "nori_tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "discard"
        }
      },
      "filter": {
        "nori_pos_filter": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E",
            "J",
            "IC"
          ]
        }

      },
      "analyzer": {
        "nori_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": ["lowercase", "nori_pos_filter"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "book_title": { "type": "text",
                      "analyzer" : "nori_analyzer" },
      "book_price": { "type": "double" },
      "authors": { "type": "text", "analyzer" : "nori_analyzer" },
      "review_count": { "type": "integer" },
      "average_score": { "type": "float" },
      "thumbnail_image": { "type": "text" }
    }
  }
}

